<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="ControlLED"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:id="@+id/IdControl" android:layout_marginTop="43dp"
            android:textSize="18sp" android:textStyle="bold"/>
    <Button
            android:text="Encender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="159dp" android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:id="@+id/IdEncender" android:layout_marginTop="123dp" android:layout_marginLeft="159dp"/>
    <Button
            android:text="Apagar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/IdEncender" android:id="@+id/IdApagar" android:layout_marginTop="208dp"/>
    <TextView
            android:text="Dato:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_marginEnd="148dp"
            android:layout_alignParentBottom="true" android:id="@+id/IdBufferIn" android:layout_marginBottom="177dp"
            android:layout_marginRight="148dp" android:textSize="18sp" android:textStyle="bold"/>
    <Button
            android:text="Desconectar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignEnd="@+id/IdEncender"
            android:layout_alignParentBottom="true" android:id="@+id/IdDesconectar" android:layout_marginBottom="72dp"/>
</RelativeLayout>