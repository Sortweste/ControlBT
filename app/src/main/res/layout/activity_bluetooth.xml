        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <TextView
            android:text="Dispositivos Vinculados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:id="@+id/IdTitulo" android:layout_marginTop="50dp"
            android:textSize="18sp" android:textStyle="bold"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_alignParentTop="true" android:layout_marginEnd="81dp"
            android:layout_marginTop="137dp" android:layout_marginRight="81dp" android:id="@+id/IdLista"
            android:layout_below="@+id/IdTitulo"/>
</RelativeLayout>